{
  "parser": "babel-eslint",
  "plugins": [ "react",
			   "jsx-a11y",
			   "import"],
  "env": {
    "browser": true,
	"jquery": true,
    "es6": true,
    "node": true
  },
  "settings": {
	"import/core-modules": [],
	"import/resolver": {
		"webpack": {
			"config": "webpack.config.js"
			}
	}
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": true,
    "modules": true,
    "spread": true,
    "templateStrings": true,
    "jsx": true
  },
  "extends": "airbnb",
  "rules": {
	"indent": [2,4, {"SwitchCase": 1}],
	 brace-style: ["error", "stroustrup"],
	"no-trailing-spaces": 0,
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
	"react/prop-types": 1,
	"react/jsx-indent": [2,4],
	"react/jsx-indent-props": [2,4],
	"max-len": [2, 80]

  }
}